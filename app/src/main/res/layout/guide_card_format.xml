<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:elevation="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="10dp">
        <TextView
            android:id="@+id/guide_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:background="?attr/selectableItemBackground"
            android:text="@string/guide_title"/>

        <TextView
            android:id="@+id/guide_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/guide_title"
            android:text="@string/guide_subtitle"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:autoLink="web"
            android:linksClickable="true"
            />

        <View
            android:id="@+id/act_divider"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@id/guide_sub_title"
            android:background="@color/cardview_shadow_start_color" />

        <Button
            android:id="@+id/view_guide_btn"
            android:layout_width="70sp"
            android:layout_height="32sp"
            android:layout_below="@id/act_divider"
            android:background="@drawable/ripple_effect"
            android:textColor="@color/colorAccentGuides"
            android:layout_marginTop="8sp"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:text="@string/view_btn_text"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>